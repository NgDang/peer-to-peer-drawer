{
  "extends": "ts-config-single-spa",
   "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "target": "es5",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": ["es5", "es2015", "es2016", "dom"],
      "module": "esnext",
      "moduleResolution": "node",
			 "jsx": "react-jsx",
			"declarationDir": "dist",
			"types": ["webgl2", "canvas"], 
      "sourceMap": true,
    },
	"typeRoots": [
		"../node_modules/@types",
		"../@types"
	],
  "files": ["src/root-demo.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
